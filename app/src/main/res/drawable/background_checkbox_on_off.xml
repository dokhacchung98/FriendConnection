<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:state_checkable="false">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#CCC" />
                    <size android:width="12dp" android:height="12dp" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_online" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#CCC" />
                    <size android:width="12dp" android:height="12dp" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_offline" />
        </layer-list>
    </item>
</selector>