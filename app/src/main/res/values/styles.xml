<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#2196F3</item>
        <item name="colorAccent">#3b3b3b</item>
        <item name="android:windowActivityTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity1</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#2196F3</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#e6e7e7</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#9f9f9f</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="AnimationActivity1" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_l</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_r</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>


    <style name="PrimaryButtonHome" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@null</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.Button">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:button">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/open_zoom</item>
        <item name="android:windowExitAnimation">@anim/close_zoom</item>
    </style>

    <style name="MyAppThemeFour" parent="Theme.AppCompat.Light">
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogStyle</item>
    </style>

    <style name="MyTimePickerDialogStyle" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
</resources>

