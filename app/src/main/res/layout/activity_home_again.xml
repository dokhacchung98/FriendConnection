<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="6"
        android:background="@drawable/bghome"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:elevation="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_overlay="true"
            app:civ_border_width="3dp"
            app:civ_circle_background_color="@color/colorWhite"
            app:civ_fill_color="@color/colorBlack" />


        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font_name"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/btnUser"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_person_black_24dp"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="-4dp"
                android:text="User"
                android:textColor="@color/colorBlack"
                android:theme="@style/PrimaryButtonHome" />


            <Button
                android:id="@+id/btnFriend"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_supervisor_account_black_24dp"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="-4dp"
                android:text="Friend"
                android:textColor="@color/colorBlack"
                android:theme="@style/PrimaryButtonHome" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">


            <Button
                android:id="@+id/btnPosition"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_location_on_black_24dp"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="-4dp"
                android:text="@string/my_position"
                android:textColor="@color/colorBlack"
                android:theme="@style/PrimaryButtonHome" />


            <Button
                android:id="@+id/btnSchedule"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_account_balance_black_24dp"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="-4dp"
                android:text="@string/schedule"
                android:textColor="@color/colorBlack"
                android:theme="@style/PrimaryButtonHome" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/btnMes"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_question_answer_black_24dp"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="-4dp"
                android:text="Messenger"
                android:textColor="@color/colorBlack"
                android:theme="@style/PrimaryButtonHome" />

            <Button
                android:id="@+id/btnLogout"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_exit"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="-4dp"
                android:text="@string/logout"
                android:textColor="@color/colorBlack"
                android:theme="@style/PrimaryButtonHome" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>