<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:layout_weight="3"
        android:translationZ="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical"
            android:weightSum="4">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:elevation="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_overlay="true"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="@color/colorWhite"
                app:civ_fill_color="@color/colorBlack" />


            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/font_name"
                android:gravity="center"
                android:text="Đỗ Khắc Chung"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUser"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_person_black_24dp"
                android:gravity="center"
                android:text="User"
                android:textColor="@color/colorTextHint"
                android:theme="@style/PrimaryButtonHome"
                android:translationZ="2dp" />


            <Button
                android:id="@+id/btnFriend"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_supervisor_account_black_24dp"
                android:gravity="center"
                android:text="Friend"
                android:textColor="@color/colorTextHint"
                android:theme="@style/PrimaryButtonHome"
                android:translationZ="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnPosition"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_location_on_black_24dp"
                android:gravity="center"
                android:text="My Position"
                android:textColor="@color/colorTextHint"
                android:theme="@style/PrimaryButtonHome"
                android:translationZ="2dp" />


            <Button
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_account_balance_black_24dp"
                android:gravity="center"
                android:text="Appointment"
                android:textColor="@color/colorTextHint"
                android:theme="@style/PrimaryButtonHome"
                android:translationZ="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMes"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_question_answer_black_24dp"
                android:gravity="center"
                android:text="Messenger"
                android:textColor="@color/colorTextHint"
                android:theme="@style/PrimaryButtonHome"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/btnLogout"
                style="@style/PrimaryButtonHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_exit"
                android:gravity="center"
                android:text="@string/logout"
                android:textColor="@color/colorTextHint"
                android:theme="@style/PrimaryButtonHome"
                android:translationZ="2dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>